#!/usr/bin/env php
<?php

if (file_exists(__DIR__.'/../../../autoload.php')) {
    require __DIR__.'/../../../autoload.php';
} else {
    require __DIR__.'/../vendor/autoload.php';
}

$app = new pxgamer\Torrent\Console\Application();
try {
    $app->run();
} catch (\Exception $exception) {
    exit($exception->getMessage());
}
